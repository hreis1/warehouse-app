<section id="order">
  <div class="d-flex gap-4 justify-content-center m-4 align-items-center">
    <h2>Detalhes do Pedido</h2>
  </div>

  <div class="d-flex justify-content-center m-4 align-items-center">
    <%= render 'order', order: @order %>
  </div>

  
  <div class="d-flex gap-4 justify-content-center m-4 align-items-center">
    <h2>Itens do Pedido</h2>
    
    <div>
      <%= link_to 'Adicionar Item', new_order_order_item_path(@order), class: 'btn btn-primary' %>
    </div>
  </div>
  
  <div class="d-flex flex-column justify-content-center m-4 align-items-center">
    <ul class="list-group">
      <% @order.order_items.each do |order_item| %>
        <li class="list-group-item">
          <%= order_item.quantity %> x <%= order_item.product_model.name %>
        </li>
      <% end %>
    </ul>
  </div>

  <div class="d-flex justify-content-center gap-4">
    <% if @order.pending? %>
      <%= button_to 'Confirmar Entrega', delivered_order_path(@order), class: 'btn btn-success' %>
      <%= button_to 'Cancelar Pedido', canceled_order_path(@order), class: 'btn btn-danger' %> 
    <% end %>
    <%= link_to 'Editar', edit_order_path(@order), class: 'btn btn-primary' %>
    <%= link_to 'Voltar', orders_path, class: 'btn btn-secondary' %>
  </div>
</section>