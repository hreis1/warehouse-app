<%= form_with model: @order do |form| %>
  <div class="row">
    <div class="mb-3 col-md-4">
      <%= form.label :warehouse_id, class: "form-label" %>
      <div class="input-group mb-3">
        <%= form.collection_select :warehouse_id, @warehouses, :id, :full_description, {:prompt=>true}, {:class=>'form-select'} %>
      </div>
    </div>

    <div class="mb-3 col-md-4">
      <%= form.label :supplier_id, class: "form-label" %>
      <div class="input-group mb-3">
        <%= form.collection_select :supplier_id, @suppliers, :id, :corporate_name, {:prompt=>true}, {:class=>'form-select'} %>
      </div>
    </div>

    <div class="mb-3 col-md-4">
      <%= form.label :estimated_delivery_date, class: "form-label" %>
      <%= form.date_field :estimated_delivery_date, class: "form-control" %>
    </div>

    <div class="d-flex justify-content-center gap-4 mt-4">
      <%= form.submit nil, class: "btn btn-primary" %>
    </div>
  </div>
<% end %>