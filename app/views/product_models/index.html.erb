<section id="product_models">
  <div class="d-flex gap-4 justify-content-center m-4 align-items-center">
    <h2><%= ProductModel.model_name.human(count: 2) %></h2>

    <div>
      <%= link_to "Cadastrar Modelo de Produto", new_product_model_path, class: "btn btn-primary" %>
    </div>
  </div>

  <% if @product_models.any? %>
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th><%= ProductModel.human_attribute_name(:name) %></th>
            <th><%= ProductModel.human_attribute_name(:sku) %></th>
            <th><%= ProductModel.human_attribute_name(:supplier_id) %></th>
          </tr>
        </thead>
        <tbody>
          <% @product_models.each do |pm| %>
            <tr>
              <td><%= link_to pm.name, pm %></td>
              <td><%= pm.sku %></td>
              <td><%= pm.supplier.corporate_name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
  <% else %>
    <p class="text-muted">Nenhum modelo de produto cadastrado</p>
  <% end %>
</section>