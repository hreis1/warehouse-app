<section id="product_models">
  <h2>Modelos de Produtos</h2>

  <div>
    <%= link_to "Cadastrar Modelo de Produto", new_product_model_path %>
  </div>

  <% if @product_models.any? %>
    <table>
      <thead>
        <tr>
          <th>Nome</th>
          <th>SKU</th>
          <th>Fornecedor</th>
        </tr>
      </thead>
      <tbody>
        <% @product_models.each do |pm| %>
          <tr>
            <td><%= link_to pm.name, pm %></td>
            <td><%= pm.sku %></td>
            <td><%= pm.supplier.corporate_name %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>Nenhum modelo de produto cadastrado</p>
  <% end %>
</section>