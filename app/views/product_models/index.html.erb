<section id="product_models">
  <h2>Modelos de Produtos</h2>

  <% if @product_models.any? %>
    <table>
      <thead>
        <tr>
          <th>Nome</th>
          <th>SKU</th>
          <th>Fornecedor</th>
        </tr>
      </thead>
      <tbody>
        <% @product_models.each do |product_model| %>
          <tr>
            <td><%= product_model.name %></td>
            <td><%= product_model.sku %></td>
            <td><%= product_model.supplier.corporate_name %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>Nenhum modelo de produto cadastrado</p>
  <% end %>
</section>