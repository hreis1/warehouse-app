<% if @product_model.errors.any? %>
    <div>
        <p>Verifique os seguintes erros:</p>
        <ul>
            <% @product_model.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>
<% end %>
<%= form_with model: @product_model do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :sku %>
    <%= f.text_field :sku %>
  </div>

  <div>
    <%= f.label :height %>
    <%= f.number_field :height %>
  </div>

  <div>
    <%= f.label :width %>
    <%= f.number_field :width %>
  </div>

  <div>
    <%= f.label :depth %>
    <%= f.number_field :depth %>
  </div>

  <div>
    <%= f.label :weight %>
    <%= f.number_field :weight %>
  </div>

  <div>
    <%= f.label :supplier_id %>
    <%= f.collection_select :supplier_id, @suppliers, :id, :corporate_name %>
  </div>

  <div>
    <%= f.submit %>
  </div>
<% end %>