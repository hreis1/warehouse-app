<% if @product_model.errors.any? %>
  <div class="alert alert-danger">
    <p>Verifique os seguintes erros:</p>
    <ul>
      <% @product_model.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_with model: @product_model do |f| %>
  <div class="row">
    <div class="mb-3 col-md-4">
      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="mb-3 col-md-4">
      <%= f.label :sku, class: "form-label" %>
      <%= f.text_field :sku, class: "form-control" %>
    </div>

    <div class="mb-3 col-md-4">
      <%= f.label :supplier_id, class: "form-label" %>
      <div class="input-group mb-3">
        <%= f.collection_select :supplier_id, @suppliers, :id, :corporate_name, {:prompt=>true}, {:class=>'form-select'} %>
      </div>
    </div>

    <div class="mb-3 col-md-3">
      <%= f.label :height, class: "form-label" %>
      <%= f.number_field :height, class: "form-control" %>
    </div>

    <div class="mb-3 col-md-3">
      <%= f.label :width, class: "form-label" %>
      <%= f.number_field :width, class: "form-control" %>
    </div>

    <div class="mb-3 col-md-3">
      <%= f.label :depth, class: "form-label" %>
      <%= f.number_field :depth, class: "form-control" %>
    </div>

    <div class="mb-3 col-md-3">
      <%= f.label :weight, class: "form-label" %>
      <%= f.number_field :weight, class: "form-control" %>
    </div>
   
    <div class="d-flex justify-content-center gap-4 mt-4">
      <%= f.submit nil, class: "btn btn-primary" %>
      <%= link_to "Voltar", :back, class: "btn btn-secondary" %>
    </div>
  </div>
<% end %>