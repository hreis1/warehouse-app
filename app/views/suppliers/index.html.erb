<section id="suppliers">
  <div class="d-flex gap-4 justify-content-center m-4 align-items-center">
    <h2>Fornecedores</h2>
    
    <div>
      <%= link_to 'Cadastrar fornecedor', new_supplier_path, class: 'btn btn-primary' %>
    </div>
  </div>


  <% if @suppliers.any? %>
    <table class="table table-hover table-striped">
      <thead>
        <tr>
          <th>Nome</th>
          <th>Localização</th>
        </tr>
      </thead>
      <tbody>
        <% @suppliers.each do |s| %>
          <tr>
            <td><%= link_to s.brand_name, s %></td>
            <td><%= s.city %> - <%= s.state %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="text-muted">Nenhum fornecedor cadastrado</p>
  <% end %>
</section>