<% if @supplier.errors.any? %>
  <div class="alert alert-danger">
    <p>Verifique os seguintes erros:</p>
    <ul>
      <% @supplier.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_with model: @supplier do |f| %>
  <div class="row">
    <div class="mb-3 col-md-6">
      <%= f.label :corporate_name, class: "form-label" %>
      <%= f.text_field :corporate_name, class: "form-control" %>
    </div>

    <div class="mb-3 col-md-6">
      <%= f.label :brand_name, class: "form-label" %>
      <%= f.text_field :brand_name, class: "form-control" %>
    </div>

    <div class="mb-3 col-md-4">
      <%= f.label :full_address, class: "form-label" %>
      <%= f.text_field :full_address, class: "form-control" %>
    </div>

    <div class="mb-3 col-md-4">
      <%= f.label :city, class: "form-label" %>
      <%= f.text_field :city, class: "form-control" %>
    </div>

    <div class="mb-3 col-md-4">
      <%= f.label :state, class: "form-label" %>
      <%= f.text_field :state, class: "form-control" %>
    </div>

    <div class="mb-3 col-md-4">
      <%= f.label :registration_number, class: "form-label" %>
      <%= f.text_field :registration_number, class: "form-control" %>
    </div>

    <div class="mb-3 col-md-4">
      <%= f.label :email, class: "form-label" %>
      <%= f.text_field :email, class: "form-control" %>
    </div>

    <div class="mb-3 col-md-4">
      <%= f.label :phone, class: "form-label" %>
      <%= f.text_field :phone, class: "form-control" %>
    </div>

    <div class="d-flex justify-content-center gap-4 mt-4">
      <%= f.submit nil, class: "btn btn-primary" %>
      <%= link_to "Voltar", :back, class: "btn btn-secondary" %>
    </div>
  </div>
<% end %>