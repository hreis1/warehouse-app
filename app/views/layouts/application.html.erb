<!DOCTYPE html>
<html>
  <head>
    <title>WarehouseApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application" %>
  </head>

  <body>
    <header>
      <%= link_to root_path do %>
        <h1>Sistema de Galpões e Estoque</h1>
      <% end %>
      <nav>
        <ul>
          <li><%= link_to "Galpões", root_path %></li>
          <li><%= link_to "Fornecedores", suppliers_path %></li>
          <li><%= link_to "Modelos de Produtos", product_models_path %></li>
          <li><%= link_to "Registrar Pedido", new_order_path %></li>
          <li>
            <% if user_signed_in? %>
              <%= current_user.description %> 
              <%= button_to "Sair", destroy_user_session_path, method: :delete %>
            <% else %>
              <%= link_to "Entrar", new_user_session_path %>
            <% end %>
          </li>
        </ul>
      </nav>
    </header>
    <main>
      <div>
        <%= notice %>
        <%= alert %>
      </div>
      <%= yield %>
    </main>
  </body>
</html>
