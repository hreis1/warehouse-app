<section id="warehouse">
  <h2>Galpão <%= @warehouse.code %></h2>
  
  <dl>
    <dt>Descrição:</dt>
    <dd><%= @warehouse.description %></dd>
    <dt>Nome:</dt>
    <dd><%= @warehouse.name %></dd>
    <dt>Cidade:</dt>
    <dd><%= @warehouse.city %></dd>
    <dt>Área:</dt>
    <dd><%= @warehouse.area %> m²</dd>
    <dt>Endereço:</dt>
    <dd><%= @warehouse.address %></dd>
    <dt>CEP:</dt>
    <dd><%= @warehouse.cep %></dd>
  </dl>
</section>

<%= link_to 'Editar', edit_warehouse_path(@warehouse) %>
<%= link_to 'Voltar', root_path %>
<%= button_to 'Deletar', @warehouse, method: :delete %>